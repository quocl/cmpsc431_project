<p id="notice"><%= notice %></p>

<h1>Public Wishlists</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Wishlist Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @wishlists2.size == 0%>
      <tr><td>There is no public wishlist yet.</td></tr>
    <% else %>
      <% @wishlists2.each do |wishlist| %>
        <tr>
          <td><%= wishlist.name %></td>
          <td>&nbsp</td>
          <td><%= wishlist.user_id %></td>
          <td>&nbsp</td>
          <td><%= link_to 'Show', wishlist %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>

</table>

<br>

