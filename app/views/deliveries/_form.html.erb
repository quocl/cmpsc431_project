<%= form_for(@delivery) do |f| %>
  <% if @delivery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@delivery.errors.count, "error") %> prohibited this delivery from being saved:</h2>

      <ul>
      <% @delivery.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
   
        <% if @order.order_items.size == 0 %>
            <p class="text-center">
              There are no items in your shopping cart.  Please <%= link_to "go back", root_path %> and add some items to your cart.
            </p> %>
        <% else %>
            <table class = "table table-striped">
            <thead>
              <tr>
                <th>Item Name</th>
                <th>Item amount</th>
                <th>Subtotal</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
            <% @order.order_items.each do |order_item| %>
            <tr>
              <td><%= @sale_items.find(order_item.sale_item_id).item_name %></td>
              <td><%= order_item.quantity %></td>
              <td><%= number_to_currency order_item.total_price %></td>
            </tr>
          <% end %>
             </tbody>
              </table>
          <h3 class="text-right">Total Price: <span style="color: green"><%= number_to_currency current_order.subtotal %></span></h3>
        <% end %>




  <%= render "address_row" , f: f %>
  <%= render "card_row" , f: f %>

  <div class="field">
    <%= f.hidden_field :trackingnumber %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-primary"%>
  </div>
<% end %>
