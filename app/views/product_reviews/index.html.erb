<h3>Product Reviews:</h3>
<%= params%>
<table class = "table table-striped">
  <thead>
    <tr>
      <th>Rating</th>
      <th>User</th>
      <th>Titile</th>
      <th>Content</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_reviews.each do |productReview| %>
      
      <tr>
        <td><i><%= productReview.rating %> / 5</i></td>
        <td><i><%= User.find(productReview.user_id).email %></i></td>
      <td><b><%= productReview.review_title %></b></td>
      

      
        <td><%= productReview.review_content %></td>
        <% if current_user.id.to_i == productReview.user_id.to_i%>
          <td><%= link_to 'Destroy', product_review_path(productReview.id), method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger btn-xs" %></td>
        <% end %>
      </tr>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Review", { :controller => :product_reviews, :action => :new , :format => params[:format]}, class: "btn btn-primary"%>
