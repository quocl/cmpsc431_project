<%= form_for(@seller_review) do |sr| %>
  
  <%= @sale_item_id %>
  <div class="field">
    <%= sr.label :rating %><br>
    <%= sr.text_field :rating %>
  </div>

  <div class="field">
    <%= sr.label :review_title %><br>
    <%= sr.text_field :review_title %>
  </div>

  <div class="field">
    <%= sr.label :review_content %><br>
    <%= sr.text_area :review_content %>
  </div>

  <%= sr.hidden_field :seller_id, :value => SaleItem.find(params[:format]).user_id %>

  <div class="actions">
    <%= sr.submit %>
  </div>

<% end %>
