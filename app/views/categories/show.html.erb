<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Parent Category:</strong>
  <%= link_to "#{@category.category.name}", category_path(:id => @category.category_id) rescue nil %>
</p>

<table class ="table table-striped">
  <thead>
    <tr>
      <th>Child Categories</th>
    </tr>
  </thead>

  <tbody>
  	<% @child_categories.each do |category| %>
  		<tr>
  			<td> <%= link_to "#{category.name}", category_path(:id => category.id) %> </td>	
  		</tr>	
  	<% end %> 
  </tbody>

</table>
<%= link_to "Sale Items", sale_items_category_path(:id => @category.id) %>
<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
