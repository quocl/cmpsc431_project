<p id="notice"><%= notice %></p>

<h1>All Categories</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Parent Category</th>
      <th>Subcategory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.parentcategory.name rescue nil %></td>
        <td><% category.subcategories.each do |c|%>
        <%= c.name %>
        <%end%>
        </td>
        <td><%= link_to 'Show', category ,:class => "btn btn-primary"%>
        <%= link_to 'Edit', edit_category_path(category), :class => "btn btn-primary" %>
        <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } ,:class => "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path,:class => "btn btn-primary" %>
